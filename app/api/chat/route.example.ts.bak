/**
 * Example API Route for AI Chat Integration
 * 
 * To use this:
 * 1. Rename this file to route.ts
 * 2. Install the AI SDK: npm install ai @ai-sdk/openai
 * 3. Add your API key to .env.local: OPENAI_API_KEY=your_key_here
 * 4. Update the AIAssistant component to call this API
 */

import { NextRequest, NextResponse } from 'next/server'
import { openai } from '@ai-sdk/openai'
import { streamText } from 'ai'

export async function POST(req: NextRequest) {
  try {
    const { messages } = await req.json()

    // Validate input
    if (!messages || !Array.isArray(messages)) {
      return NextResponse.json(
        { error: 'Invalid request: messages array required' },
        { status: 400 }
      )
    }

    // Call OpenAI API
    const result = await streamText({
      model: openai('gpt-4o-mini'), // or 'gpt-3.5-turbo' for cheaper option
      messages: messages.map((msg: any) => ({
        role: msg.role,
        content: msg.content,
      })),
      system: `You are a helpful AI assistant for a rugby club management system. 
      Help users with:
      - Player management
      - Training sessions
      - Financial records
      - Inventory management
      - Match statistics
      - Generating reports
      
      Be friendly, concise, and helpful.`,
    })

    return result.toDataStreamResponse()
  } catch (error: any) {
    console.error('AI API Error:', error)
    return NextResponse.json(
      { error: 'Failed to process AI request', details: error.message },
      { status: 500 }
    )
  }
}

